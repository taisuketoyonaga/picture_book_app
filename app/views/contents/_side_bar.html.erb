        <div class = 'name_search'>
        名前で探す
        <% f.label :name_cont %>
        <%= f.search_field :name_cont,placeholder: '名前を入力' %>
        </div>
        <div class = 'place_search'>
        場所で探す
        <% f.label :place_cont %>
        <%= f.search_field :place_cont,placeholder: '場所を入力'%>
        </div>
